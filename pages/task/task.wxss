.container {
  padding: 20px;
}

.section {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.item {
  background-color: #f8f8f8;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 5px;
}

.item-title {
  font-size: 18px;
  font-weight: bold;
}

.item-content, .item-detail {
  font-size: 16px;
  margin-top: 15px;
  color:gray;
}

.detail-button {
  margin-top: 10px;
  background-color: #a28acb;
  color: white;
  padding: 5px;
  border: none;
  border-radius: 5px;
  height:30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:14px;
}
