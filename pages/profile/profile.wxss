
.container {
  max-width: 600px;
  margin: 124px auto;
  padding: 20px;
}

.user-info {
  width: 96%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.user-details {
  display: flex;
  align-items: center;
}
.base-info{
  display: inline-block !important;
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border:1px solid #ccc;
  margin-right: 20px;
  padding:10px;
}

.username {
  font-size: 1.2em;
  font-weight: bold;
}
.userid{
  font-size: 14px;
  color:gray;
}

.logout-btn {
  background-color: #ffffff;
  margin-right: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90px;
  /* 根据需要调整宽度 */
  height: 30px;
  /* 根据需要调整高度 */
  color: #000000;
  /* 根据需要调整文字颜色 */
  border: none;
  /* 去掉边框 */
  border-radius: 5px;
  /* 根据需要调整圆角 */
  font-size: 14px;
  /* 根据需要调整字体大小 */
}

.section {
  width: 96%;
  margin-top: 20px;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.section-title {
  font-weight: bold;
  font-size: 18px;
}

.section-content {
  display: flex;
  padding-top:5px;
  padding-bottom:5px;
}

.remove-device-btn {
  background-color: #F40009;
  color:#ffffff;
  margin-right: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30px;
  font-size: 14px;
}

.section h2 {
  margin-top: 0;
  color: #333;
}

.device-list,
.order-list {
  list-style-type: none;
  padding: 0;
}

.device-item,
.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.device-name,
.order-info {
  flex-grow: 1;
}

.remove-btn,
.view-btn {
  color: #000000;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
  display: flex;
  height: 30px;
  font-size: 14px;
  justify-content: center;
  align-items: center;
}


.add-device-btn {
  display: block;
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15px;
  margin-top: 20px;
  color: #000000;
  border: none;
  border-radius: 5px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.order-type {
  font-size: 0.9em;
  color: #666;
}
.order-desc{
  margin-bottom:10px;
}

.order-date {
  font-size: 0.8em;
  color: #999;
}